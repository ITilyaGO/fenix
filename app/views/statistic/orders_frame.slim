.non-print
  .pull-right
    = link_to 'Печать', 'javascript:print()', :class => 'btn btn-glue btn-sm'
  .text-center
    = form_tag url(:statistic, :orders_frame_start) do
      span дней: #{(@to-@from).ceil+1} &nbsp;
      select name="from" class="huge mbl"
        - today = Date.today
        - 20.times do |i|
          - html_attributes = { :value => timeline_id(today) }
          - html_attributes[:selected] ||= option_is_selected?(today, today, @from)
          = content_tag(:option, today, html_attributes)
          - today -= 1
      |&nbsp;
      select name="to" class="huge mbl"
        - today = Date.today
        - 20.times do |i|
          - html_attributes = { :value => timeline_id(today) }
          - html_attributes[:selected] ||= option_is_selected?(today, today, @to)
          = content_tag(:option, today, html_attributes)
          - today -= 1
      |&nbsp;
      = submit_tag 'сформировать', class: 'btn btn-sm btn-glue'


